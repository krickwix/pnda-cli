{
  "Parameters" : {
    "instancetypeGateway" : {
      "Type" : "String",
      "Default" : "t2.medium",
      "Description" : "Instance type for the Gateway"
    },
    "instancetypeKafka" : {
      "Type" : "String",
      "Default" : "m4.large",
      "Description" : "Instance type for databus combined instance"
    },
    "instancetypeCdhMgr" : {
      "Type" : "String",
      "Default" : "m4.xlarge",
      "Description" : "Instance type for CDH management"
    },
    "instancetypeCdhDn" : {
      "Type" : "String",
      "Default" : "c4.xlarge",
      "Description" : "Instance type for CDH datanode"
    },
    "instancetypeEdge" : {
      "Type" : "String",
      "Default" : "m4.2xlarge",
      "Description" : "Instance type for cluster edge node"
    },
    "instancetypeESMulti" : {
      "Type" : "String",
      "Default" : "t2.medium",
      "Description" : "Instance type for ELK ES cluster multi-role node"
    },
    "instancetypeLogstash" : {
      "Type" : "String",
      "Default" : "t2.medium",
      "Description" : "Instance type for ELK Logstash node"
    },
    "logVolumeSizeGb" : {
      "Type" : "String",
      "Default" : "10",
      "Description" : "Size in GB for the log volume"
    }
  },
  "Resources": {
    "instanceGateway": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeGateway" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "gateway" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "gateway"
          },
          {
            "Key": "node_idx",
            "Value": ""
          }
        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          }
        ],
        "NetworkInterfaces": [
          {
            "DeleteOnTermination": "true",
            "Description": "Primary network interface",
            "DeviceIndex": 0,
            "SubnetId": {"Ref": "PublicSubnet"},
            "GroupSet": [{"Ref": "sshSg"}],
            "AssociatePublicIpAddress": "true"
          }
        ]
      }
    },
    "instanceKafka": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeKafka" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "kafka-$node_idx$" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "kafka"
          },
          {
            "Key": "node_idx",
            "Value": "$node_idx$"
          }

        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          }
        ],
        "NetworkInterfaces": [
          {
            "DeleteOnTermination": "true",
            "Description": "Primary network interface",
            "DeviceIndex": 0,
            "SubnetId": {"Ref": "PublicSubnet"},
            "GroupSet": [{"Ref": "pndaSg"}],
            "AssociatePublicIpAddress": "true"
          }
        ]
      }
    },

    "instanceCdhDn": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeCdhDn" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "hadoop-dn-$node_idx$" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "hadoop-dn"
          },
          {
            "Key": "node_idx",
            "Value": "$node_idx$"
          }
        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          },
          {
              "DeviceName"  : "/dev/sdd",
              "Ebs" : { "VolumeSize" : "35" }
          }
        ],
        "NetworkInterfaces": [
          {
            "DeleteOnTermination": "true",
            "Description": "Primary network interface",
            "DeviceIndex": 0,
            "SubnetId": {"Ref": "PrivateSubnet"},
            "GroupSet": [{"Ref": "pndaSg"}],
            "AssociatePublicIpAddress": "false"
          }
        ]
      }
    },
    "instanceCdhEdge": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeEdge" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "hadoop-edge" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "hadoop-edge"
          },
          {
            "Key": "node_idx",
            "Value": ""
          }
        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          }
        ],
        "NetworkInterfaces": [
          {
            "DeleteOnTermination": "true",
            "Description": "Primary network interface",
            "DeviceIndex": 0,
            "SubnetId": {"Ref": "PublicSubnet"},
            "GroupSet": [{"Ref": "pndaSg"}],
            "AssociatePublicIpAddress": "true"
          }
        ]
      }
    },
    "instanceCdhMgr1": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Ref" : "imageId" },
        "InstanceType": { "Ref" : "instancetypeCdhMgr" },
        "KeyName": { "Ref" : "keyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join" : [ "-", [ {"Ref": "pndaCluster"}, "hadoop-mgr-1" ] ]}
          },
          {
            "Key": "pnda_cluster",
            "Value": {"Ref": "pndaCluster"}
          },
          {
            "Key": "node_type",
            "Value": "hadoop-mgr"
          },
          {
            "Key": "node_idx",
            "Value": ""
          }
        ],
        "BlockDeviceMappings" : [
          {
              "DeviceName" : "/dev/sda1",
              "Ebs" : { "VolumeSize" : "30" }
          },
          {
              "DeviceName" : "/dev/sdc",
              "Ebs" : { "VolumeSize" : {"Ref": "logVolumeSizeGb"} }
          }
        ],
        "NetworkInterfaces": [
          {
            "DeleteOnTermination": "true",
            "Description": "Primary network interface",
            "DeviceIndex": 0,
            "SubnetId": {"Ref": "PublicSubnet"},
            "GroupSet": [{"Ref": "pndaSg"}],
            "AssociatePublicIpAddress": "true"
          }
        ]
      }
    }
  }
}
